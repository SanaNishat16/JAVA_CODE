
public class Comparison {

	public static void main(String[] args) {
		                           
		 String s1 = "hello";
		 String s2 = new String ("hello");
		 System.out.println(s1 == s2);

	String str1 = new String("Java");
	String str2 = str1;
	System.out.println(str1==str2);
	
	String str = "Sky";
	String str3 ="sky";
	System.out.println(str==str3);

	
	String a = "dell";
	String b = new String("dell");
	System.out.println(a==b);
	System.out.println(a.equals(b));
	
	
	String c = new String("lenovo");
	String d = new String("Lenovo");
	System.out.println(c==d);
	System.out.println(c.equals(d));
	
	
	String username = "admin";
	System.out.println(username.equalsIgnoreCase("admin"));
	
	
	String username1 = "Admin";
	String username2 = "admin";
	
	System.out.println(username1.compareTo(username2));
	System.out.println(username2.compareTo(username1));
	
	String f = new String("Java");
	String e = new String("Java");
	System.out.println(f.compareTo(e));
	
	//*******SUBSTRING********//
	
	String g = "the sky is blue";
	String h = g.substring(4,10);
	System.out.println(g);
	System.out.println(h);

	String i = g.substring(4);
	System.out.println(i);
	
	String j = g.substring(4,10);
	
	
	///******CHAR AT AND INDEX AT*******\\
	
 String k = "the cat sat";
 System.out.println(k.charAt(5));
 System.out.println(k.charAt(8));
 
                                                 
 
 String str6 = "The cat sat";
 System.out.println(str6.indexOf('t'));
 System.out.println(str6.lastIndexOf('t'));	
	

 String str8 = " The cat sat on mat";
 System.out.println(str8.indexOf('t',7));//doubt why output is 7
 System.out.println(str8.indexOf('k'));
 System.out.println(str8.lastIndexOf("at"));	
	
	
	///TO LOWER CASE AND TO UPPER CASE\\\ 
	
 
 String l = "java";
 l.toUpperCase();
 System.out.println(l);
 
 String m = "java";
 m = m.toUpperCase();
 System.out.println(m);
 
 String n = "ASHOKIT";
 n.toLowerCase();
 System.out.println(n);
 
 String o ="dell";
 System.out.println(o.toUpperCase());
 System.out.println(o);
 
 
 
 
 
 
 
 
 
 
	
	
	
	
	
	
	}

}
